-# app/views/movies/show.html.haml
- if @movie != nil
  %h2 #{@movie.title}

  %ul#details
    %li
      Rating:
      = @movie.rating
    %li
      Released on:
      = @movie.release_date.strftime("%B %d, %Y")

  %h3 Description

  %p#description= @movie.description

  #footer-links
    = button_to "Edit", edit_movie_path(@movie), :method => :get
    = button_to "Delete", movie_path(@movie), :method => :delete, :confirm => "Are you sure you want to delete #{@movie.title}?"
    = link_to "Return to movie list", movies_path
- else
  %h2 "Whoops! No movie here."
